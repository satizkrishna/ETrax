<div class="container">
  <div class="row">
    <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
      <div class="card card-signin my-5">
        <div class="card-body">
          <h3 class="card-title text-center">E Trax</h3>
          <h5 class="card-title text-center">Sign In</h5>
          <%= form_for(resource, as: resource_name, url: session_path(resource_name), class: "form-signin") do |f| %>
            <div class="form-label-group">
              <input type="email" id="inputEmail" class="form-control signin-input" placeholder="Email address" required autofocus name="user[email]">
              <label for="inputEmail">Email</label>
            </div>

            <div class="form-label-group">
              <input type="password" id="inputPassword" class="form-control signin-input" placeholder="Password" required name="user[password]">
              <label for="inputPassword">Password</label>
            </div>

            <div class="custom-control custom-checkbox mb-3">
              <input type="checkbox" class="custom-control-input" id="customCheck1" name="user[remember_me]">
              <label class="custom-control-label" for="customCheck1">Remember password</label>
            </div>
            <button class="btn btn-lg btn-primary btn-block text-uppercase" type="submit">Sign in</button>
            <br>
            Don't have an account? <a href="/users/sign_up"> Register</a>
            <hr class="my-4">
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
