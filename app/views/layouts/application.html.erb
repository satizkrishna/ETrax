<!DOCTYPE html>
<html>
  <head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= content_for?(:title) ? yield(:title) : "E-Trax" %></title>
    <meta name="description" content="<%= content_for?(:description) ? yield(:description) : "E-Trax application" %>">
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => 'reload' %>
    <%= csrf_meta_tags %>
    <script type="text/javascript">
      <% if current_user.present? %>
	       current_user = '<%= current_user %>'
	       current_user_name = '<%= current_user.uname %>'
	       xcsrf = '<%= request.headers['X-XSRF-TOKEN'] %>'
	       signout = '<%= destroy_user_session_path %>'
      <% end %> 
    </script>
  </head>
  <body>
    <header>
      <%= render 'layouts/navigation' if current_user.present? %>
    </header>
    <main role="main">
			<%= render 'layouts/messages' %>
       		<div id="main-body">
       			<%= yield %>	
       		</div>
       		
    </main>
  </body>
</html>
